@page
@model ShopWebApp.Areas.Administration.Pages.Discounts.CustomerDiscounts.CreateModel

<div class="container container--max--xl">

    <div class="card">
        <div class="card-body p-5">

            <div class="mb-5">
                <h2 class="mb-0 fs-exact-18">Create New Customer Discount</h2>
            </div>

            <form asp-page="./Create"  method="post" class="row g-4">

                <div class="col-md-6">
                    <label asp-for="@Model.CustomerDiscount.ProductId" class="form-label">Product</label>
                    <select asp-for="@Model.CustomerDiscount.ProductId" asp-items='new SelectList(Model.Products,"Id","Name")' class="form-select">
                        <option value="0">Choose Product</option>
                    </select>

                    @* <span asp-validation-for="@Model.CreateProduct.CategoryId" class="alert-sa-danger-card"></span> *@
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.CustomerDiscount.DiscountRate" class="form-label">Discount Rate</label>
                    <input type="text" asp-for="@Model.CustomerDiscount.DiscountRate" class="form-control" />

                    @* <span asp-validation-for="Name" class="alert-sa-danger-card"></span> *@
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.CustomerDiscount.StartDate" class="form-label">Start Date</label>
                    <input type="text"
                           class="form-control datepicker-here"
                           data-auto-close="true"
                           data-language="en"
                           aria-label="Datepicker"
                        asp-for="@Model.CustomerDiscount.StartDate" class="form-control" />

                    @* <span asp-validation-for="Code" class="alert-sa-danger-card"></span> *@
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.CustomerDiscount.EndDate" class="form-label">End Date</label>
                    <input  type="text"
                           class="form-control datepicker-here"
                           data-auto-close="true"
                           data-language="en"
                           aria-label="Datepicker"
                    asp-for="@Model.CustomerDiscount.EndDate" />

                    @* <span asp-validation-for="UnitPrice" class="alert-sa-danger-card"></span> *@
                </div>


                <div class="col-md-12">
                    <label asp-for="@Model.CustomerDiscount.Name" class="form-label">Name</label>
                    <input type="text" asp-for="@Model.CustomerDiscount.Name" class="form-control" />

                    @* <span asp-validation-for="Picture" class="alert-sa-danger-card"></span> *@
                </div>


                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>

            </form>

        </div>


    </div>

</div>
