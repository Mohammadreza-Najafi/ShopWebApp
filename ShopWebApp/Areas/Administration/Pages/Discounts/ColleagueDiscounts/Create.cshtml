@page
@model ShopWebApp.Areas.Administration.Pages.Discounts.ColleagueDiscounts.CreateModel

<div class="container container--max--xl">

    <div class="card">
        <div class="card-body p-5">

            <div class="mb-5">
                <h2 class="mb-0 fs-exact-18">Create New Colleague Discount</h2>
            </div>

            <form asp-page="./Create"  method="post" class="row g-4">

                <div class="col-md-6">
                    <label asp-for="@Model.ColleagueDiscount.ProductId" class="form-label">Product</label>
                    <select asp-for="@Model.ColleagueDiscount.ProductId" asp-items='new SelectList(Model.Products,"Id","Name")' class="form-select">
                        <option value="0">Choose Product</option>
                    </select>

                    @* <span asp-validation-for="@Model.CreateProduct.CategoryId" class="alert-sa-danger-card"></span> *@
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.ColleagueDiscount.DiscountRate" class="form-label">Discount Rate</label>
                    <input type="text" asp-for="@Model.ColleagueDiscount.DiscountRate" class="form-control" />

                    @* <span asp-validation-for="Name" class="alert-sa-danger-card"></span> *@
                </div>

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>

            </form>

        </div>

    </div>

</div>
