@page
@model ShopWebApp.Areas.Administration.Pages.Inventory.EditModel

<div class="container container--max--xl">

    <div class="card">
        <div class="card-body p-5">

            <div class="mb-5">
                <h2 class="mb-0 fs-exact-18">Edit Inventory : @Model.Inventory.Id</h2>
            </div>

            <form asp-page="./Edit"  method="post" class="row g-4">

                <div class="col-md-6">
                    <label asp-for="@Model.Inventory.ProductId" class="form-label">Product</label>
                    <select asp-for="@Model.Inventory.ProductId" asp-items='new SelectList(Model.Products, "Id", "Name")' class="form-select">
                        <option value="0">Choose Product</option>
                    </select>

                    @* <span asp-validation-for="@Model.CreateProduct.CategoryId" class="alert-sa-danger-card"></span> *@
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.Inventory.UnitPrice" class="form-label">Unit Price</label>
                    <input type="text" asp-for="@Model.Inventory.UnitPrice" class="form-control" />

                    @* <span asp-validation-for="Name" class="alert-sa-danger-card"></span> *@
                </div>


                <input type="hidden" asp-for="@Model.Inventory.Id" value="@Model.Inventory.Id" />

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>

            </form>

        </div>


    </div>

</div>
