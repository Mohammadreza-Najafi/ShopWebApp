@page
@model ShopWebApp.Areas.Administration.Pages.Shop.ProductPictures.EditModel

<div class="container container--max--xl">

    <div class="card">
        <div class="card-body p-5">

            <div class="mb-5">
                <h2 class="mb-0 fs-exact-18">Edit Product Picture : @Model.ProductPicture.PictureTitle</h2>
            </div>

            <form asp-page="./Edit" method="post" class="row g-4">

                <div class="col-md-12">
                    <label asp-for="@Model.ProductPicture.ProductId" class="form-label">Product</label>
                    <select asp-for="@Model.ProductPicture.ProductId" asp-items='new SelectList(Model.Products,"Id","Name")' class="form-select">
                        <option value="0">Product</option>
                    </select>

                    @* <span asp-validation-for="@Model.CreateProduct.CategoryId" class="alert-sa-danger-card"></span> *@
                </div>

                <div class="col-md-12">
                    <label asp-for="@Model.ProductPicture.Picture" class="form-label">Picture</label>
                    <input type="text" asp-for="@Model.ProductPicture.Picture" class="form-control" />

                    @* <span asp-validation-for="Picture" class="alert-sa-danger-card"></span> *@
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.ProductPicture.PictureAlt" class="form-label">Alt</label>
                    <input type="text" asp-for="@Model.ProductPicture.PictureAlt" class="form-control" />

                    @* <span asp-validation-for="PictureAlt" class="alert-sa-danger-card"></span> *@
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.ProductPicture.PictureTitle" class="form-label">Title</label>
                    <input type="text" asp-for="@Model.ProductPicture.PictureTitle" class="form-control" />

                    @* <span asp-validation-for="PictureTitle" class="alert-sa-danger-card"></span> *@
                </div>

                <input type="hidden" asp-for="@Model.ProductPicture.Id" value="@Model.ProductPicture.Id" />

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>

        </div>


    </div>

</div>
