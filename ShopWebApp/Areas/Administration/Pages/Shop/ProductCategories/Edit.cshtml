@page
@model ShopWebApp.Areas.Administration.Pages.Shop.ProductCategories.EditModel


<div class="container container--max--xl">

    <div class="card">
        <div class="card-body p-5">

            <div class="mb-5">
                <h2 class="mb-0 fs-exact-18">Edit Category : @Model.ProductCategory.Name</h2>
            </div>

            <form asp-page="./Edit" asp-page-handler="Edit" method="post" class="row g-4">

                <div class="col-md-6">
                    <label asp-for="@Model.ProductCategory.Name" class="form-label">Name</label>
                    <input type="text" asp-for="@Model.ProductCategory.Name" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.ProductCategory.Slug" class="form-label">Slug</label>
                    <input type="text" asp-for="@Model.ProductCategory.Slug" class="form-control" />
                </div>

                <div class="col-md-12"
                            <label asp-for="@Model.ProductCategory.Picture" class="form-label">Picture</label>
                            <input type="text" asp-for="@Model.ProductCategory.Picture" class="form-control" />
                        </div>

                <div class="col-md-6">
                    <label asp-for="@Model.ProductCategory.PictureAlt" class="form-label">Alt</label>
                    <input type="text" asp-for="@Model.ProductCategory.PictureAlt" class="form-control" />
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.ProductCategory.PictureTitle" class="form-label">Title</label>
                    <input type="text" asp-for="@Model.ProductCategory.PictureTitle" class="form-control" />
                </div>

                <div class="col-md-12">
                    <label asp-for="@Model.ProductCategory.Description" class="form-label">Description</label>
                    <textarea class="form-control" asp-for="@Model.ProductCategory.Description" rows="4"></textarea>
                </div>

                <div class="col-md-12">
                    <label asp-for="@Model.ProductCategory.Keywords" class="form-label">Keywords</label>
                    <input type="text" asp-for="@Model.ProductCategory.Keywords" class="form-control" />
                </div>

                <div class="col-md-12">
                    <label asp-for="@Model.ProductCategory.MetaDescription" class="form-label">Meta Description</label>
                    <textarea class="form-control" asp-for="@Model.ProductCategory.MetaDescription" rows="4"></textarea>
                </div>

                <input type="hidden" asp-for="@Model.ProductCategory.Id" value="@Model.ProductCategory.Id" />

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Create</button>
                </div>
            </form>

        </div>


    </div>

</div>
