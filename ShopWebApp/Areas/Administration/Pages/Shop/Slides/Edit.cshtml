@page
@model ShopWebApp.Areas.Administration.Pages.Shop.Slides.EditModel


<div class="container container--max--xl">

    <div class="card">
        <div class="card-body p-5">

            <div class="mb-5">
                <h2 class="mb-0 fs-exact-18">Edit Slide : @Model.Slide.Title</h2>
            </div>

            <form asp-page="./Edit" method="post" class="row g-4">


                <div class="col-md-12">
                    <label asp-for="@Model.Slide.Picture" class="form-label">Picture</label>
                    <input type="text" asp-for="@Model.Slide.Picture" class="form-control" />

                    @* <span asp-validation-for="Picture" class="alert-sa-danger-card"></span> *@
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.Slide.PictureAlt" class="form-label">Alt</label>
                    <input type="text" asp-for="@Model.Slide.PictureAlt" class="form-control" />

                    @* <span asp-validation-for="PictureAlt" class="alert-sa-danger-card"></span> *@
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.Slide.PictureTitle" class="form-label">Picture Title</label>
                    <input type="text" asp-for="@Model.Slide.PictureTitle" class="form-control" />

                    @* <span asp-validation-for="PictureTitle" class="alert-sa-danger-card"></span> *@
                </div>

                <div class="col-md-6">
                    <label asp-for="@Model.Slide.Heading" class="form-label">Heading</label>
                    <input type="text" asp-for="@Model.Slide.Heading" class="form-control" />

                    @* <span asp-validation-for="PictureTitle" class="alert-sa-danger-card"></span> *@
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.Slide.Title" class="form-label">Title</label>
                    <input type="text" asp-for="@Model.Slide.Title" class="form-control" />

                    @* <span asp-validation-for="PictureTitle" class="alert-sa-danger-card"></span> *@
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.Slide.Text" class="form-label">Caption</label>
                    <input type="text" asp-for="@Model.Slide.Text" class="form-control" />

                    @* <span asp-validation-for="PictureTitle" class="alert-sa-danger-card"></span> *@
                </div>
                <div class="col-md-6">
                    <label asp-for="@Model.Slide.BtnText" class="form-label">Button Text</label>
                    <input type="text" asp-for="@Model.Slide.BtnText" class="form-control" />

                    @* <span asp-validation-for="PictureTitle" class="alert-sa-danger-card"></span> *@
                </div>

                <input type="hidden" asp-for="@Model.Slide.Id" value="@Model.Slide.Id" />

                <div class="col-12">
                    <button type="submit" class="btn btn-primary">Edit</button>
                </div>
            </form>

        </div>


    </div>

</div>
