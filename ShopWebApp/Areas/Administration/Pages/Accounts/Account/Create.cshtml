@model AccountManagement.Application.Contracts.Account.RegisterAccount

<div class="modal-dialog">
    <div class="modal-content">

        <div class="modal-header">

            <h5 class="modal-title" id="exampleModalLabel">Increase Inventory</h5>

            <button type="button"
                    class="sa-close sa-close--modal"
                    data-bs-dismiss="modal"
                    aria-label="Close"></button>
        </div>

        <div class="modal-body">

            <div class="card">
                <div class="card-body p-5">

                    <form asp-page="./Index" asp-page-handler="Create" method="post" class="row g-4"
                          data-ajax="true" data-callback="" data-action="Refresh" enctype="multipart/form-data">


                        <div class="col-md-6">
                            <label asp-for="Fullname" class="form-label">Full Name</label>
                            <input type="text" asp-for="Fullname" class="form-control" />

                            @* <span asp-validation-for="Fullname" class="alert-sa-danger-card"></span> *@

                        </div>

                        <div class="col-md-6">
                            <label asp-for="Username" class="form-label">UserName</label>
                            <input type="text" asp-for="Username" class="form-control" />

                            @* <span asp-validation-for="Name" class="alert-sa-danger-card"></span>*@
                        </div>


                        <div class="col-md-6">
                            <label asp-for="Mobile" class="form-label">Mobile</label>
                            <input type="text" asp-for="Mobile" class="form-control" />

                            @* <span asp-validation-for="Mobile" class="alert-sa-danger-card"></span> *@

                        </div>

                        <div class="col-md-6">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input type="text" asp-for="Password" class="form-control" />

                            @* <span asp-validation-for="Name" class="alert-sa-danger-card"></span>*@
                        </div>

                        <div class="col-md-12">
                            <label asp-for="RoleId" class="form-label">Role</label>
                            <select asp-for="RoleId" asp-items='new SelectList(Model.Roles, "Id", "Name")' class="form-select">
                                <option value="0">Choose Role</option>
                            </select>

                            @* <span asp-validation-for="Name" class="alert-sa-danger-card"></span>*@
                        </div>
                        <div class="col-md-12">
                            <label asp-for="ProfilePhoto" class="form-label">Profile Photo</label>
                            <input type="text" asp-for="ProfilePhoto" class="form-control" />

                            @* <span asp-validation-for="Name" class="alert-sa-danger-card"></span>*@
                        </div>
                        @* <input type="hidden" asp-for="InventoryId" value="@Model.InventoryId" /> *@

                        <div class="col-12">
                            <button type="submit" class="btn btn-primary">Increase</button>
                        </div>

                    </form>

                </div>
            </div>

        </div>


    </div>
</div>