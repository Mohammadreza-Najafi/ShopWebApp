@page "{id}"
@model ShopWebApp.Pages.ArticleCategoryModel
@{
}

<div class="banner-wrapper has_background">
    <img src="~/Theme/assets/images/banner-for-all2.jpg"
         class="img-responsive attachment-1920x447 size-1920x447" alt="img">

    <div class="banner-wrapper-inner">
        <h1 class="page-title">@Model.ArticleCategory.Name</h1>
        <div role="navigation" aria-label="Breadcrumbs" class="breadcrumb-trail breadcrumbs">
            <ul class="trail-items breadcrumb">
                <li class="trail-item trail-begin">
                    <a asp-page="./Index"><span>Home</span></a>
                </li>
                <li class="trail-item trail-end active">
                    <span>@Model.ArticleCategory.Name</span>
                </li>
            </ul>
        </div>
    </div>

</div>

<div class="main-container left-sidebar has-sidebar">
    <!-- POST LAYOUT -->
    <div class="container">
        <div class="row">

            <div class="main-content col-xl-9 col-lg-8 col-md-12 col-sm-12">
                <div class="blog-grid auto-clear content-post row">


                    @foreach (var article in Model.ArticleCategory.Articles)
                    {
                        <article class="post-item post-grid col-bg-4 col-xl-4 col-lg-4 col-md-4 col-sm-6 col-ts-12 post-195 post type-post status-publish format-standard has-post-thumbnail hentry">
                            <div class="post-inner">
                                <div class="post-thumb">

                                    <a asp-page="Article" asp-route-id="@article.Slug">
                                        <img src="~/ProductPictures/@article.Picture"
                                             class="img-responsive attachment-370x330 size-370x330" alt="@article.PictureAlt" title="@article.PictureTitle"
                                             width="370" height="330">
                                    </a>

                                    <a class="datebox" href="#">
                                        <span>19</span>
                                        <span>Dec</span>
                                    </a>
                                </div>
                                <div class="post-content">
                                    <div class="post-meta">
                                        <div class="post-author">
                                            By:<a href="#">
                                                admin
                                            </a>
                                        </div>
                                        <div class="post-comment-icon">
                                            <a href="#">
                                                0
                                            </a>
                                        </div>
                                    </div>

                                    <div class="post-info equal-elem">
                                        <h2 class="post-title"><a asp-page="Article" asp-route-id="@article.Slug">@article.Title</a></h2>
                                        @article.ShortDescription
                                    </div>

                                </div>
                            </div>
                        </article>
                    }


                </div>
                <nav class="navigation pagination">
                    <div class="nav-links">
                        <span class="page-numbers current">1</span>
                        <a class="page-numbers" href="#">2</a>
                        <a class="next page-numbers" href="#"><i class="fa fa-angle-right"></i></a>
                    </div>
                </nav>
            </div>

            <div class="sidebar furgan_sidebar col-xl-3 col-lg-4 col-md-12 col-sm-12">
                <div id="widget-area" class="widget-area sidebar-blog">

                    <div id="categories-3" class="widget widget_categories">
                        <h2 class="widgettitle">Categories<span class="arrow"></span></h2>
                        <ul>

                            @foreach (var category in Model.ArticleCategories)
                            {
                                <li class="item">
                                    <a asp-page="ArticleCategory" asp-route-id="@category.Slug">@category.Name <span>(@category.ArticlesCount)</span></a>
                                </li>
                            }


                        </ul>
                    </div>

                    <div id="widget_furgan_post-2" class="widget widget-furgan-post">

                        <h2 class="widgettitle">
                            RecentPost<span class="arrow"></span>
                        </h2>

                        <div class="furgan-posts">

                            @foreach (var article in Model.LatestArticles)
                            {
                                <article class="post-195 post type-post status-publish format-standard has-post-thumbnail hentry">
                                    <div class="post-item-inner">
                                        <div class="post-thumb">
                                            <a asp-page="Article" asp-route-id="@article.Slug">
                                                <img src="~/ProductPictures/@article.Picture" class="img-responsive attachment-83x83 size-83x83" alt="@article.PictureAlt" width="83" height="83">
                                            </a>
                                        </div>
                                        <div class="post-info">
                                            <div class="block-title">
                                                <h2 class="post-title">
                                                    <a asp-page="Article" asp-route-id="@article.Slug">
                                                        @article.Title
                                                    </a>
                                                </h2>
                                            </div>
                                            <div class="date">December 19, 2018</div>
                                        </div>
                                    </div>
                                </article>
                            }

                        </div>
                    </div>


                    <div id="tag_cloud-3" class="widget widget_tag_cloud">
                        <h2 class="widgettitle">Tags<span class="arrow"></span></h2>
                        <div class="tagcloud">

                            @foreach (var tag in Model.ArticleCategory.Tags)
                            {

                                <a asp-page="Search"
                                   asp-route-value="@tag"
                                   class="tag-cloud-link tag-link-46 tag-link-position-1">
                                    @tag
                                </a>

                            }

                        </div>
                    </div>

                </div><!-- .widget-area -->
            </div>

        </div>
    </div>
</div>